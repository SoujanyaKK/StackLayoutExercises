<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise.Exercise2">
   
    <ContentPage.Content>
        
        <StackLayout>
            <Label Text="nyc_photographer" TextColor="Black" FontAttributes="Bold" Margin="10" FontSize="20"></Label>

            <StackLayout Orientation="Horizontal">
                <Image Source="Nature" Aspect="Fill" Margin="0" HeightRequest="250" WidthRequest="400"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Like" Background="transparent" TextColor="#1dabf0"></Button>
                <Button Text="Comment"  Background="transparent" TextColor="#1dabf0"></Button>
                <Button Text="Share"  Background="transparent" TextColor="#1dabf0"></Button>
            </StackLayout>
            <BoxView Color="#f0f0f0" HeightRequest="1"/>
            <Label Text="700 Likes" TextColor="Black" FontAttributes="Bold" Margin="10" FontSize="18"></Label>
            <Label Text="This is a shot yesterday in skanor,Sweden, when driving home.from a couple of days of work in Denmark." FontSize="20" Margin="10,0,10,0"></Label>
            

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>