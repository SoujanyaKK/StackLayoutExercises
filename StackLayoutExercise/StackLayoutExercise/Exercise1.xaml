<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise.Exercise1"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Welcome to Xamarin"
                HorizontalOptions="Center" FontSize="30" FontAttributes="Bold" Padding="20" TextColor="White"/>
            <Label Text="Cross-platform apps made easy"  HorizontalOptions="Center" FontSize="20" TextColor="White" Padding="0,0,0,20"/>
            <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White" Margin="0,0,0,10"></Button>
            <Button Text="Register" BackgroundColor="#1dabf0" TextColor="white" Margin="0,10,0,0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>